FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue T 0
    //surfaceVectorFieldValue Uf (1 0 0)
);

regions
(
    // Set cell values
    // (does zerogradient on boundaries)
    boxToCell
    {
        box (0.2 0 0) (0.4 1 1);

        fieldValues
        (
            volScalarFieldValue T 1
        );
    }

    // Set patch values (using ==)
    boxToFace
    {
        box (-1 0 0) (0.1 1 1);

        fieldValues
        (
            volScalarFieldValue T 0
        );
    }
);

