FoamFile
{
    version         1.4;
    format          ascii;

    root            "/export/lime/data-04/sws02hs/OpenFOAM/sws02hs-1.4.1/run/shallowWater";
    case            "bucky4_30";
    instance        "constant";
    local           "";

    class           dictionary;
    object          gmtDict;
}

// How to plot
//projection "Q0/18c";
projection "G90/30/18c";
projection2D latLon;

FieldsToPlot
1
(
    [pvDiff rawValues -2e-10 2e-10 2e-11 "$HOME/gmt/usr/colours/red_white_blue"]
);

// options
region "-180/180/-90/90";
boundaryMarks "g0/g89";
//separateLegend true;
//lastPlot false;
annotate "minMax 0 -0.01";

